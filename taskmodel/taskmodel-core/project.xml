	      <artifactId>namespace</artifactId>
	      <type>jar</type>
	      <properties>
	        <war.bundle>true</war.bundle>
	      </properties>
	    </dependency>
	    <dependency>
	      <groupId>jaxb</groupId>
	      <artifactId>relaxng-datatype</artifactId>
