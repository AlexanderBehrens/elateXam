	      </properties>
	    </dependency>
	    <dependency>
	      <groupId>jaxb</groupId>
	      <artifactId>jaxb-libs</artifactId>
	      <type>jar</type>
	      <properties>
	        <war.bundle>true</war.bundle>
	      </properties>
	    </dependency>
	    <dependency>
