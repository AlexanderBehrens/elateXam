<xs:schema targetNamespace="http://examServer.thorstenberger.de/taskDefs" xmlns="http://examServer.thorstenberger.de/taskDefs" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:element name="taskDefs">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="taskDef" minOccurs="0" maxOccurs="unbounded">
					<xs:complexType>
						<xs:sequence>
							<xs:element name="shortDescription" type="xs:string" minOccurs="0"/>
							<xs:choice>
								<xs:element name="complexTaskDef">
									<xs:complexType>
										<xs:attribute name="complexTaskFile" type="xs:string" use="required"/>
										<xs:attribute name="showSolutionToStudents" type="xs:boolean" use="required"/>
									</xs:complexType>
								</xs:element>
							</xs:choice>
						</xs:sequence>
						<xs:attribute name="id" type="xs:long" use="required"/>
						<xs:attribute name="title" type="xs:string" use="required"/>
						<xs:attribute name="stopped" type="xs:boolean" use="required"/>
						<xs:attribute name="deadline" type="xs:long" use="optional"/>
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>
